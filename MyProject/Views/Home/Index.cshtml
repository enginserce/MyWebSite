@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@if (ViewBag.Errors != null)
{
    <script>
        swal("Başarısız!", "@ViewBag.Errors", "error");
    </script>
}
<div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">İletişim</h2>
        </div>
        <div class="row">
            <div class="col-md-12" data-aos="zoom-in" data-aos-delay="100">
                <div class="bg-light my-2 p-3 pt-2">
                    <form method="post">
                        <div class="form-group my-2">
                            <label for="name" class="form-label fw-bolder">Ad Soyad</label>
                            <input class="form-control" type="text" asp-for="Name" name="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label for="email" class="form-label fw-bolder">Mail</label>
                            <input class="form-control" type="email" asp-for="Email" name="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group my-2">
                            <label for="message" class="form-label fw-bolder">Mesaj</label>
                            <textarea class="form-control" style="resize: none;" asp-for="Message" rows="4"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary mt-2" type="submit" id="btn">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


