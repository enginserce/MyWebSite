@using EntityLayer.Concrete
@model List<Skills>

<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Yeteneklerim</h2>
        </div>
        <div class="bg-light p-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-12">

                        <div class="py-1">
                            <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.SkillsName</span><span>@item.Progress</span></div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @item.Progress" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
