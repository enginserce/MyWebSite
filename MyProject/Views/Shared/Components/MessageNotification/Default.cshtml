@using EntityLayer.Concrete
@using MyProject.Models
@model List<Contact>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email-outline"></i>
        <span class="count-symbol bg-warning"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Mesajlar</h6>
        <div class="dropdown-divider"></div>
        @if (!Model.Any())
        {
            <div class="alert alert-danger text-black" role="alert">
                Mesaj yok.
            </div>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.ContactID).Take(5))
            {
                <a class="dropdown-item preview-item" href="/Admin/Contact/Details/@item.ContactID">
                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                        <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Name size mesaj gönderdi.</h6>
                        <p class="text-gray mb-0"> @item.ContactDate.Zaman()</p>
                    </div>
                </a>
            }
        }
        <div class="dropdown-divider"></div>
        <a href="/Admin/Contact"><h6 class="p-3 mb-0 text-center">Tüm Mesajları Gör</h6></a>
    </div>
</li>
