@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (!Model.Any())
{
    <div class="alert alert-danger text-black" role="alert">
        Veri yok.
    </div>
}
else
{
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda</h4>
                <div class="table-responsive">
                <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Görsel</th>
                    <th>Yaş</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Düzenle</th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.AboutID</th>
                        <td>@item.Title</td>
                        <td>@item.Description.Substring(0,10)</td>
                        <td class="py-1">
                            <img src="@item.Image" alt="image">
                        </td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Adress</td>
                        <td><a href="/Admin/About/Edit/@item.AboutID" class="btn btn-outline-warning">Düzenle</a></td>
                    </tr>
                }
            </table>
            </div>
        </div>
    </div>
</div>
}