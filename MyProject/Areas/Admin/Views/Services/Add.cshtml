@model EntityLayer.Concrete.Services
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Ekle</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Hizmet Adı</label>
                    <input type="text" class="form-control" asp-for="ServicesName">
                </div>
                <div class="form-group">
                    <label>Icon</label>
                    <input type="text" class="form-control" asp-for="ServicesIcon" value="/images/services/web-design.svg">
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
            </form>
        </div>
    </div>
</div>

