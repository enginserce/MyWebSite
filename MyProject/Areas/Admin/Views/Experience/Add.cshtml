@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Beceri Ekle</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="ExperienceID" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Görev</label>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    <input type="text" asp-for="Company" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    <input type="date" asp-for="FirstDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    <input type="date" asp-for="EndDate" class="form-control" />
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
            </form>
        </div>
    </div>
</div>

