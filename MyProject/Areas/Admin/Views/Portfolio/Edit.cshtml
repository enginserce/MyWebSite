@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Düzenleme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="PortfolioID" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <input type="text" asp-for="Image" class="form-control" />
                </div>
                <div class="form-group">
                    <label>URL</label>
                    <input type="text" asp-for="Url" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

