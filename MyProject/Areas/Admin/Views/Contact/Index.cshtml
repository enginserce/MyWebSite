@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (!Model.Any())
{
    <div class="alert alert-danger text-black" role="alert">
        Veri yok.
    </div>
}
else
{
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
                <div class="table-responsive">
                    <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Mail</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                        <th>Detay</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ContactID</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        @if(item.Message.Length < 20)
                        {
                           <td>@item.Message</td>
                        }
                        else {
                                <td>@item.Message.Substring(0,20)....</td>

                        }
                        <td>@item.ContactDate.ToShortDateString()</td>
                        <td><a href="/Admin/Contact/Details/@item.ContactID" class="btn btn-outline-info">Detay</a></td>
                        <td><a href="/Admin/Contact/Delete/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </table>
        </div>
        </div>
    </div>
</div>
}
